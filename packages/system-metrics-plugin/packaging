set -ex
source /var/vcap/packages/golang-1.10-linux/bosh/compile.env

export GOROOT=$(readlink -nf /var/vcap/packages/golang-1.10-linux)
export PATH=$GOROOT/bin:$PATH
export GOPATH=$PWD

ln -s $GOPATH $GOPATH/src
go build -o ${BOSH_INSTALL_TARGET}/system-metrics-plugin github.com/pivotal-cf/bosh-system-metrics-server/cmd/plugin
